			btnEdit.CssClass = btnEdit.CssClass.Replace("btn-primary", "btn-secondary");
			btnEdit.Enabled = false;

			btnRepair.CssClass = btnRepair.CssClass.Replace("btn-primary", "btn-secondary");
			btnRepair.Enabled = false;
		}
